<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fill"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/design_default_color_primary"/>

    <ImageView
        android:id="@+id/status_pic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/fill"
        android:background="@color/teal_200"></ImageView>

    <LinearLayout
        android:id="@+id/heng_xian"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/status_pic"
        app:layout_constraintTop_toBottomOf="@id/status_pic"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="horizontal" />
    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heng_xian"
        app:layout_constraintTop_toBottomOf="@id/heng_xian"
        app:layout_constraintBottom_toTopOf="@id/item_list"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/teal_200"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/create_date" />

            <TextView
                android:id="@+id/make_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="2021/12/3"
                android:textSize="@dimen/attention_text_size"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="@color/cardview_shadow_start_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/teal_200"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saving_place"
                android:textSize="@dimen/normal_text_size"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/save_place"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="place"
                android:textSize="@dimen/attention_text_size"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:text="@string/still_have"
        android:textSize="@dimen/normal_text_size"
        android:layout_alignTop="@id/bigger_num"
        android:layout_toLeftOf="@id/bigger_num"/>

    <TextView
        android:id="@+id/bigger_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="xx"
        android:textSize="@dimen/attention_text_size"
        android:layout_below="@id/fill"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:text="@string/out_of_deadline"
        android:textSize="@dimen/normal_text_size"
        android:layout_alignTop="@+id/bigger_num"
        android:layout_toRightOf="@id/bigger_num"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">
        <Spinner
            android:id="@+id/mTypes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@color/teal_200"/>
        <Spinner
            android:id="@+id/mStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:entries="@array/ch_status"
            android:background="@color/teal_200"/>
    </LinearLayout>
</RelativeLayout>